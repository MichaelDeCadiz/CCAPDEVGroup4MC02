<div class="container py-4">
  <h3>Search Results{{#if query}} for "{{query}}"{{/if}}</h3>

  {{#if users.length}}
    <p class="text-muted">Found {{users.length}} user(s)</p>
    <ul class="list-group">
      {{#each users}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong>{{this.name}}</strong>
            <br>
            <small class="text-muted">{{this.email}}</small>
            {{#if this.description}}
            <br>
            <small>{{this.description}}</small>
            {{/if}}
          </div>
          <a href="/profile/{{this.email}}" class="btn btn-sm btn-outline-primary">View Profile</a>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <div class="alert alert-info">
      <p>No users found matching your query{{#if query}} "{{query}}"{{/if}}.</p>
    </div>
  {{/if}}

  <div class="mt-3">
    <a href="/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
  </div>
</div>