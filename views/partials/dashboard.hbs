<div class="p-4" id="dashboard-container">
    <div class="container">

        <h2 class="mb-4">My Dashboard</h2>
        <div class="mb-4 mt-2">
            <input type="text" class="form-control" placeholder="Search for users">
        </div>

        <h5 class="text-muted mb-3">My Reservations</h5>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Lab</th>
                    <th>Date</th>
                    <th>Seat</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each reservations}}
                <tr>
                    <td>{{this.lab}}</td>
                    <td>{{this.reservationDateTime}}</td>
                    <td>{{this.seatNumber}}</td>
                    <td>
                        <form action="/reservations/delete/{{this._id}}" method="POST" style="display:inline;">
                            <button class="btn btn-sm btn-danger" type="submit">Cancel</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <div class="mt-3">
            <form action="/reservations/deleteAll" method="POST">
                <button class="btn btn-outline-danger me-2" type="submit">Cancel All My Reservations</button>
            </form>
        </div>

    </div>
</div>