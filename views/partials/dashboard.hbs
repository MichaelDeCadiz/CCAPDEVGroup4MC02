<div class="p-4" id="dashboard-container">
    <div class="container">

        <h2 class="mb-4">My Dashboard</h2>
        <div class="mb-4 mt-2">
            <input type="text" class="form-control" placeholder="Search for users">
        </div>

        <h5 class="text-muted mb-3">My Reservations</h5>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Lab</th>
                    <th>Date</th>
                    <th>Seat</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="reservationsTable"></tbody>
        </table>

        <div class="mt-3">
            <button class="btn btn-outline-danger me-2">Cancel All My Reservations</button>
        </div>
    </div>
</div>

<script>
    // fake reservation data
    const fakeReservations = [
        { lab: 'Lab C', date: 'Wed, Jun 19', seat: 'D8' },
        { lab: 'Lab C', date: 'Thu, Jun 20', seat: 'D8' },
        { lab: 'Lab C', date: 'Fri, Jun 21', seat: 'D9' }
    ];

    const table = document.getElementById('reservationsTable');

    fakeReservations.forEach(res => {
        const row = document.createElement('tr');
        row.innerHTML = 
        `
        <td>${res.lab}</td>
        <td>${res.date}</td>
        <td>${res.seat}</td>
        <td> 
          <button class="btn btn-sm btn-danger">Cancel</button>
        </td>
        `;
      table.appendChild(row);
    });
</script>